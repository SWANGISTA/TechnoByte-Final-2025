<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>startSession</servlet-name>
        <servlet-class>za.ac.tut.servlet.startSession</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EncrypteMessage</servlet-name>
        <servlet-class>za.ac.tut.servlet.EncrypteMessage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MidEncrypter</servlet-name>
        <servlet-class>za.ac.tut.servlet.MidEncrypter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EndSession</servlet-name>
        <servlet-class>za.ac.tut.servlet.EndSession</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewAllDecrytedMessage</servlet-name>
        <servlet-class>za.ac.tut.servlet.viewAllDecrytedMessage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewLongMessage</servlet-name>
        <servlet-class>za.ac.tut.servlet.viewLongMessage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>startSession</servlet-name>
        <url-pattern>/startSession.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EncrypteMessage</servlet-name>
        <url-pattern>/EncrypteMessage.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MidEncrypter</servlet-name>
        <url-pattern>/MidEncrypter.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EndSession</servlet-name>
        <url-pattern>/EndSession.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewAllDecrytedMessage</servlet-name>
        <url-pattern>/viewAllDecrytedMessage.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewLongMessage</servlet-name>
        <url-pattern>/viewLongMessage.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/page_not_found.jsp</location>
    </error-page>
    <context-param>
        <param-name>pc_name</param-name>
        <param-value>SPY_C</param-value>
    </context-param>
    <error-page>
        <exception-type>java.lang.NumberFormatException</exception-type>
        <location>/NumberFormatError.jsp</location>
    </error-page>
    <security-constraint>
        <display-name>field_agent_Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>field_agentResource</web-resource-name>
            <description>accessed by field agent</description>
            <url-pattern>/addMessage.jsp</url-pattern>
            <url-pattern>/EncrypteMessage.do</url-pattern>
            <url-pattern>/EncypteMessage.jsp</url-pattern>
            <url-pattern>/MidEncrpter.do</url-pattern>
            <url-pattern>/erroPage.jsp</url-pattern>
            <url-pattern>/page_not_found.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>allow authentication agent </description>
            <role-name>agent</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>agent_Manger</display-name>
        <web-resource-collection>
            <web-resource-name>ManagerResource</web-resource-name>
            <description>Resource For manager</description>
            <url-pattern>/viewAllDecryptedMessage.jsp</url-pattern>
            <url-pattern>/viewAllDecrptedMessage.do</url-pattern>
            <url-pattern>/Allmessages.jsp</url-pattern>
            <url-pattern>/viewLongMessage.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>allow authentication manager</description>
            <role-name>manager</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/loginPage.jsp</form-login-page>
            <form-error-page>/errorPage.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>field agent can send encrypted message</description>
        <role-name>agent</role-name>
    </security-role>
    <security-role>
        <description>agent_manager can view All Decrepted Massages </description>
        <role-name>manager</role-name>
    </security-role>
</web-app>
